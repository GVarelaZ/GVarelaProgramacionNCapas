<style>
    .modal-body {
        overflow: auto;
    }
    body{
        background-color: black;
    }
</style>
<div class="modal modal-dialog modal-lg" id="Modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="text-decoration-underline fw-bold" style="text-align: center; font-style: oblique; color: red; font-size: 50px; ">AVISOS</h4>
            </div>
            <div class="modal-body">
                @if (ViewBag.MensajesError != null)
                {
                    <div class="container">
                        <div class="row">
                            <div class="col ">

                                <table id="errores" class="table table-responsive table-striped table-bordered table-warning">
                                    <thead>
                                        <tr class="text-center">
                                            <th scope="col">Num. registro</th>
                                            <th scope="col">Errores</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        @foreach (var error in ViewBag.MensajesError)
                                        {
                                            <tr>
                                                <td style=" text-align:center;">
                                                    @error.NumeroRegistro
                                                </td>
                                                <td>
                                                    <ol>
                                                        @{
                                                            var temp = error.ErrorMessage.Split('|');
                                                            foreach (var mensaje in temp)
                                                            {                                                                
                                                                <li>@mensaje</li>
                                                            }
                                                        }
                                                    </ol>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                @if (ViewBag.mensajeInsertar != null)
                {
                    var temp = ViewBag.mensajeInsertar.Split('|');

                    foreach (var mensaje in temp)
                    {
                        //@mensaje <br>
                        <h4>@mensaje</h4>


                    }

                    <h4>los siguientes registros no pudieron insertarse: @ViewBag.RegistrosNoInsertados</h4>
                }
                @if (ViewBag.mensajeError != null)
                {
                    <h4>
                        @ViewBag.mensajeError

                    </h4>
                }
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Continuar", "GetAll", "Usuario", new { area = "" }, htmlAttributes: new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
</div>
<script>
    $('#Modal').modal();



</script>
